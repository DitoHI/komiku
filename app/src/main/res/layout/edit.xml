<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#388d7c">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="#d9d9d9"
            android:layout_marginLeft="170dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/frameLayout">

        <GridView
            android:id="@+id/gridGallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="-10dp"
            android:horizontalSpacing="-15dp"
            android:numColumns="3"
            android:padding="0dp"
            android:verticalSpacing="-15dp" >
        </GridView>

        <ImageView
            android:id="@+id/layout_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:contentDescription="@string/app_name"
            android:background="@drawable/bg_simple" />
    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/effectPhoto">

            <ImageView
                android:id="@+id/effect_color_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:onClick="buttonClicked"
                android:src="@drawable/effect_color_depth_32" />
            <ImageView
                android:id="@+id/effect_color_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:onClick="buttonClicked"
                android:src="@drawable/effect_color_depth_64" />

            <ImageView
                android:id="@+id/effect_greyscale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:onClick="buttonClicked"
                android:src="@drawable/effect_grayscale" />
            <!--<ImageView-->
            <!--android:id="@+id/effect_highlight"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="2dp"-->
            <!--android:onClick="buttonClicked"-->
            <!--android:src="@drawable/effect_highlight" />-->
            <ImageView
                android:id="@+id/effect_hue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:onClick="buttonClicked"
                android:src="@drawable/effect_hue" />
            <!--<ImageView-->
            <!--android:id="@+id/effect_reflaction"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="2dp"-->
            <!--android:onClick="buttonClicked"-->
            <!--android:src="@drawable/effect_reflaction" />-->
            <ImageView
                android:id="@+id/effect_sepia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:onClick="buttonClicked"
                android:src="@drawable/effect_sepia" />
            <ImageView
                android:id="@+id/effect_sepia_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:onClick="buttonClicked"
                android:src="@drawable/effect_sepia_blue" />
            <ImageView
                android:id="@+id/effect_sepia_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:onClick="buttonClicked"
                android:src="@drawable/effect_sepia_green" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#388d7c">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editLayout">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/collage"
                    android:src="@drawable/collage"
                    android:background="#00000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="COLLAGE"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="7dp"/>

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sticker"
                    android:src="@drawable/emot"
                    android:background="#00000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="STICKER"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="7dp"/>

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter"
                    android:src="@drawable/palette"
                    android:background="#00000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="FILTER"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="7dp"/>

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/popUpText"
                    android:src="@drawable/text"
                    android:background="#00000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="TEXT"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="7dp"/>

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/save"
                    android:src="@drawable/save3"
                    android:background="#00000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="7dp"/>

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/share"
                    android:src="@drawable/share3"
                    android:background="#00000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="SHARE"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="7dp"/>

            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>

